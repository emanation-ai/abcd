<style>
.normal-text-{{section.id}}{
    background:{{section.settings.py_section_bg_color}}
}
</style>
<div class="frontpage-intro normal-text-{{section.id}} bc-{{settings.section_style}}-bt py-pd-y-s">
  <div class="{% if section.settings.full_width %}normal-text--full-width{% else %}page-width{% endif %} page-width-{{settings.section_style}} py-{{section.settings.page_width}} ">
    <div class="grid grid--gapless grid--1-col">
      <div class="grid__item">
        <div class="normal-text__content " style="text-align:{{section.settings.align}}">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                <h2 class="normal-text__heading py-{{block.settings.fs}} py-mg-y-s" style="color:{{section.settings.py_section_color}}">
                  {{ block.settings.heading | newline_to_br }}
                </h2>
              {%- when 'text' -%}
                <div class="normal-text__text rte py-{{block.settings.fs}}"  style="color:{{section.settings.py_section_color}}">{{ block.settings.text }}</div>
              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <div class="normal-text__text">
                  <a href="{{ block.settings.button_link }}" class="{{ block.settings.btn_style }} button py-btn-no-br py-c-{{block.settings.py_section_color_view_btn}} py-hv-c-{{block.settings.py_section_color_view_btn_hover}} py-bg-c-{{block.settings.py_section_bg_color_view_btn}} py-hv-bg-c-{{block.settings.py_section_bg_color_view_btn_hover}} py-btn-{{block.settings.view_btn_size}}"{% if block.settings.button_link == blank %} aria-disabled="true"{% endif %}>{{ block.settings.button_label | escape }}</a>
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>


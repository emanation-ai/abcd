<style>
.pdp-mission {
  display: grid;
  text-align: center;
  max-width:1600px;
  padding:0 2.5rem;
  margin: auto;
}
.pdp-mission--meta {
  padding: 2.4rem;
  color: #FAF7F0;
  background: #B17E62;
}
.pdp-mission--meta h4 {
  font-size: 2.4rem;
  margin-bottom: 1.3rem;
}
.pdp-mission--meta a {
  text-decoration: underline;
}

@media only screen and (min-width: 769px) {
  .pdp-mission {
    grid-template-columns: repeat(2, 1fr);
  }
  .pdp-mission--meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4.8rem;
    text-align: center;
  }
  .pdp-mission--meta h4 {
    font-size: 4rem;
    margin-bottom: 2.3rem;
  }
}
</style>
<img class="pdp-mission--img" src="{{ section.settings.image | image_url: width: 1000 }}" alt="UnHide - {{ product.title }} Learn More About Our Mission"/>
<div class="pdp-mission--meta">
  <h4 class="h2">{{ section.settings.headline }}</h4>
  <a href="{{ section.settings.url }}">Our Mission</a>
</div>

{% schema %}
{
  "name": "PDP - Mission",
  "tag": "section",
  "class": "pdp-mission py-pd-y-m",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline"
    },
    {
      "type": "url",
      "id": "url",
      "label": "URL"
    }
  ],
  "presets": [
    {
      "name": "PDP - Mission"      
    }
  ]
}
{% endschema %}
                        {%if blockMediaType == "image"%}
                            <img src="{{block.settings.block_img | img_url: 'master'}}" alt="">
                        {%else%}
                        <video {%if block.settings.video_cb_autoplay %}autoplay{%endif%} {%if block.settings.video_cb_loop%}loop{%endif%} {%if block.settings.video_cb_muted%}muted{%endif%} {%if block.settings.video_cb_controls%}controls{%endif%}>
                            <source src="{{block.settings.video_url_files}}" type="video/mp4">
                            Your browser does not support the video tag.

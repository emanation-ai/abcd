                {
                "type": "image_picker",
                "id": "block_img",
                "label": "Image"
                },
                {
                    "type": "text",
                    "id": "video_url_files",
                    "label": "Video url from files"
                },
                {
                    "type": "header",
                    "content": "Video options"
                },
                {
                    "type": "checkbox",
                    "id": "video_cb_autoplay",
                    "label": "Video on autoplay",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "video_cb_loop",
                    "label": "Video on loop",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "video_cb_muted",
                    "label": "Video muted",
                    "default": true
                },
                {
                    "type": "checkbox",
                    "id": "video_cb_controls",
                    "label": "Video controls",
                    "default": true
                }


           ]
         }
       ],
        "presets": [
            {
             "name": "Take it everywear"
            }
         ]
      }

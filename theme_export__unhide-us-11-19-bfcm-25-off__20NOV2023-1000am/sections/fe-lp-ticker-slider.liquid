<style>
    .ticker-slider-full-width{
        background: #000;
    }
      .swiper {
        width: 100%;
        height: 100%;
      }
      .ticker-wrapper{
        width: 100%;
      }
      .ticker-slider .swiper-wrapper
      {
        transition-timing-function:linear; 
      }
      .swiper-slide {
        text-align: center;
        font-size: 18px;

        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
      }

   
      .ticker-slider .swiper-slide p{
          color: #fff;
          font-size:58px;
          margin: 0;
          font-family: "adonis-web", Helvetica, sans-serif;
          width: 100%;
      }
      
      @media screen and (max-width:1600px) {
        .ticker-slider .swiper-slide p{
          font-size:40px;
      }

      } 
      @media screen and (max-width:1280px) {
        .ticker-slider .swiper-slide p{
          font-size:35px;
      }
    }
    @media screen and (max-width:992px) {
        .ticker-slider .swiper-slide p{
          font-size:56px;
      }
    }
    @media screen and (max-width:768px) {
      .ticker-slider .swiper-slide p{
          font-size:30px;
      }
    }

      @media screen and (max-width:400px) {

        .ticker-slider .swiper-slide p{
               font-size: 52px;
           }
      }
</style>
<div class="landing-page-full-width-wrapper ticker-slider-full-width">
    <div class="landing-page-wrapper ticker-wrapper">
        <div class="swiper ticker-slider">
      
            <div class="swiper-wrapper">
             {%assign numOfRep=section.settings.sentence_repetition | plus: 0%}
              {% for i in (1..numOfRep) %}
              <div class="swiper-slide"><p>{{section.settings.ticker-sentence}}</p></div>
              {% endfor %}
            
            </div>
          </div>
      
          <!-- Swiper JS -->
          <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
      
          <!-- Initialize Swiper -->
          <script>
            var swiper = new Swiper(".ticker-slider", {
                slidesPerView:"auto",
                loop:true,
                spaceBetweenSlides: 50,
                speed: 3500,
                    autoplay: {
                        delay: 0,
                    },
                allowTouchMove: false,
                disableOnInteraction: true,
                breakpoints: {
            300: {
                slidesPerView: 1,
                spaceBetweenSlides: 100,
               
            },
            768: {
                slidesPerView: 2,
              
            },
            1024: {
                slidesPerView: 3,
             
            },
            1280: {
                slidesPerView: 4,
            },
        },

            });
          </script>
    </div>
</div>
{%schema%}
{
    "name": "Ticker slider",
    "settings":[
    {
      "type": "text",
      "id": "ticker-sentence",
      "label": "Sentence you want to be shown",
      "default": "For love, not fur."
    },
    {
      "type": "range",
      "id": "sentence_repetition",
      "min": 5,
      "max": 10,
      "step": 1,
      "label": "Sentence repetitions",
      "default": 7
    }

    ],
    "presets": [
        {
         "name": "Ticker slider"
        }
     ]
  }
{%endschema%}
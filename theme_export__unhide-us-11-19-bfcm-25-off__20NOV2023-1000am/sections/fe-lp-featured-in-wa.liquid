<style>
  
    .featured-in-swiper {
      width: 100%;
      height: 100%;
      padding: 10px;
    }

    .featured-in-swiper .swiper-slide {
      text-align: center;
      font-size: 18px;
      background: #fff;

      /* Center slide text vertically */
      display: -webkit-box;
      display: -ms-flexbox;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -ms-flex-pack: center;
      -webkit-justify-content: center;
      justify-content: center;
      -webkit-box-align: center;
      -ms-flex-align: center;
      -webkit-align-items: center;
      align-items: center;
    }

    .featured-in-swiper .swiper-slide img {
      display: block;
      height: 50px;
      width: auto;
      object-fit: cover;
    }
    .featured-in-full-width{
        background-color: #fff;
        padding: 35px 0;
    }
    .featured-in-button{
      color: #c8a979;
        display: flex !important;
        justify-content: center;
        align-items: center;


    }
    .featured-in-button::after{
      font-size: 20px !important; 
      font-weight: bolder;
     
    }
    .swiper-pagination{
      position: relative;
      top: 13px;
      display: none;
    }
    .swiper-pagination-bullet-active{
      background-color:#c7a877 !important;
    }
    .swiper-pagination-bullet{
      width: 10px !important;
      height: 10px  !important;
    }
    @media screen and (max-width:400px){
        .swiper-pagination{
      
        display: block;
      }
    }
    .featured-in-headline{
      padding-bottom: 20px;
    }
    .featured-in-headline h3 {
      text-align: center;
    font-size: 45px;
    }
</style>
{%assign imageBlocks= section.blocks | where :"type","featured-in-blocks"%}
<div class="landing-page-full-width-wrapper featured-in-full-width">
  <div class="landing-page-wrapper">
      <div class="featured-in-headline">
        <h3>{{section.settings.featured-in-headline}}</h3>
      </div>
      <div class="featured-slider-in-wrapper">
          <div class="swiper featured-in-swiper">
              <div class="swiper-wrapper">
                {%for block in imageBlocks%} 
                  <div class="swiper-slide"><img src="{{block.settings.featured-in-img | img_url: 'master'}}" alt=""/></div>
                {%endfor%}


              </div>
              <div class="swiper-pagination"></div> 
             
            </div>
      </div>

  </div>
</div>

<!-- Initialize Swiper -->
<script>
var swiper = new Swiper(".featured-in-swiper", {
  slidesPerView:4,
  loop:true, 
  pagination: {
          el: ".swiper-pagination",
          clickable:true
        },
  breakpoints: {
          300: {
              slidesPerView: 1,
              spaceBetween: 20,
          },
          768: {
              slidesPerView: 2,
              spaceBetween: 40,
             
          },
          1024: {
              slidesPerView: 3,
              spaceBetween: 50,
          },
          1280: {
              slidesPerView: 4,
              spaceBetween: 30,
          },
      },
     

});
</script>
{%schema%}
{
  "name": "Featured in wa",
 "settings": [
 {
  "type": "text",
  "id": "featured-in-headline",
  "label": "Headline",
 "default": "As seen on"

}

 ],
  "blocks": [
   {
     "name": "Featured in blocks",
     "type": "featured-in-blocks",
     "settings": [
       {
         "type": "image_picker",
         "id": "featured-in-img",
         "label": "Image"
       }
     ]
   }
 ],
  "presets": [
      {
       "name": "Featured in without arrows"
      }
   ]
}
{%endschema%}
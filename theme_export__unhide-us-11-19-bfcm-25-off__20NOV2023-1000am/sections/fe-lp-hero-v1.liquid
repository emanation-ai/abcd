        "label": "Custom product old price",
        "default": "000"
    },
    {
        "type": "image_picker",
        "id": "product-img",
        "label": "Product image"
    },
    {
        "type": "text",
        "id": "hero-product-cta",
        "label": "Button text",
        "default": "Shop now"
    },
